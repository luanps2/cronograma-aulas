# Server Configuration
PORT=5000
NODE_ENV=development

# Database Connection (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Local: postgresql://postgres:postgres@localhost:5432/senactech
# Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/senactech

# Security
# Secret key for signing JWT tokens. Change this in production!
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_SECRET

# Google OAuth (Optional for local dev if not using social login)
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# Frontend Connection
# URL where the frontend is hosted (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173
